{
  "version": 1,
  "include": [
    "**/*.md",
    "**/*.mdc",
    "**/*.json",
    "**/*.js",
    "**/*.ts",
    "**/*.py",
    "**/*.html",
    "**/*.css",
    "**/*.scss",
    "**/*.sh",
    ".gitignore",
    "Dockerfile",
    "docker-compose.yml"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/.DS_Store",
    "**/build/**",
    "**/dist/**",
    "**/*.log",
    "**/.env",
    "**/.vscode/sftp.json",
    "**/.vscode/**",
    "**/.venv/**",
    "**/venv/**",
    "**/ENV/**",
    "**/VENV/**",
    "**/__pycache__/**",
    "**/.cache/**",
    "**/.git/**",
    "**/*.mp3",
    "**/*.wav",
    "**/*.m4a",
    "**/*.flac",
    "**/*.ogg",
    "**/*.aac",
    "**/.specstory/history/*.md",
    "**/.specstory/**",
    "archive/**",
    "archives/**",
    "archived/**",
    "**/archive/**",
    "**/archives/**",
    "**/archived/**"
  ]
} 